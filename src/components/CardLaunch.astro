---
interface Props {
    id: string;
    name: string;
    date: string;
    details: string | null;
    img: string;
    success: boolean;
    flightNumber: number;
}

const { success, flightNumber, img, id, details, name, date } = Astro.props;
const launchStatus = success ? "Success" : "Failure";
---

<a href={`/launch/${id}`} class="rounded-lg shadow-md bg-gray-800 border-gray-700 hover:scale-105 hover:bg-gray-700 hover:border-gray-500 transition flex flex-col">
    <picture class="flex justify-center p-4">
        <img class="mb-5 rounded-lg min-h-[200px] max-h-[200px] w-auto" src={img} alt="Patch for launch ${id}" />
    </picture>

    <header class="p-4 flex-grow">
        <span class="text-gray-500 mr-1.5">{date}</span>

        <span class:list={["uppercase text-xs font-semibold mr-2 px-2.5 py-0.5 rounded",
            {
                "bg-green-600 text-white" : success,
                "bg-red-600 text-white": !success
            }
        ]}>{launchStatus}</span>


        <h2 class="my-2 text-2xl font-bold tracking-tight text-white">
            Flight #{flightNumber}
        </h2>

        <!-- <p class="mb-4 font-light text-gray-400">
            {details != null && details?.length > 100 ? details.slice(0, 100) + "..." : details}
        </p> -->
    </header>
</a>